{
  "name": "moi-dither",
  "version": "1.0.1",
  "description": "Free app for dithering and creative FX",
  "author": "Moikas",
  "license": "MIT",
  "main": "dist/main/index.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron . --dev",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:win": "electron-forge make --platform win32",
    "make:mac": "electron-forge make --platform darwin",
    "make:linux": "electron-forge make --platform linux",
    "make:all": "npm run make:win && npm run make:linux",
    "dist": "npm run build && npm run make:all",
    "publish": "electron-forge publish",
    "test": "bun test --preload ./tests/setup.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "release": "bun run scripts/create-release.js"
  },
  "devDependencies": {
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@reforged/maker-appimage": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "latest",
    "@types/node": "^24.0.3",
    "@vitejs/plugin-react": "^4.5.2",
    "electron": "^36.4.0",
    "electron-icon-builder": "^2.0.1",
    "jsdom": "^26.1.0",
    "sharp": "^0.34.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron-builder": "^26.0.12",
    "gif.js": "^0.2.0",
    "gifuct-js": "^2.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.25.67",
    "electron-updater": "^6.5.5"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
